<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp"
    style="@style/CustomDialogAlertAddQuote">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Вход"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:padding="2sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <EditText
        android:id="@+id/login"
        android:hint="Почта"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <EditText
        android:id="@+id/password"
        android:hint="Пароль"
        style="@style/TextStyle"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <EditText
        android:enabled="false"
        android:visibility="invisible"
        android:id="@+id/password_two"
        android:hint="Подтвердите пароль"
        style="@style/TextStyle"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:enabled="false"
        android:visibility="invisible"
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:layout_below="@id/password_two"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        style="@style/ButtonAddStyle" />

    <Button
        android:enabled="true"
        android:visibility="visible"
        android:id="@+id/button_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textAllCaps="false"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        style="@style/ButtonAddStyle" />

    <TextView
        android:enabled="true"
        android:visibility="visible"
        android:id="@+id/textview_noacc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_auth"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:text="Нет аккаунта"
        android:gravity="center"
        />

    <TextView
        android:enabled="false"
        android:visibility="gone"
        android:id="@+id/textview_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_register"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="Войти"
        android:gravity="center"
        />

</RelativeLayout>
