<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.Quote" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:windowBackground">@drawable/wallpaper</item>
        <!-- Customize your light theme here. -->
        <item name="android:textColorHint">#A1A1A1</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="customSearchIcon">@drawable/ic_search_black</item>
        <item name="customMenuIcon">@drawable/black_menu</item>
        <item name="iconQuotes">@drawable/ic_quote_black</item>
        <item name="iconAnecdotes">@drawable/ic_emoji_black</item>
        <item name="iconbulb">@drawable/ic_lightbulb_black</item>
        <item name="iconsort">@drawable/ic_sort_black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NavigationLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDialogAlertSpinner">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="OverflowStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_three_points_black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#555555</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ButtonAddStyle">
        <item name="android:backgroundTint">#DEDFF7E2</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDialogAlertTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/colorMenu</item>
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDialogAlertAddQuote">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@drawable/dialog_light</item>
        <item name="windowMinWidthMinor">85%</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="Theme.Quote" parent="Base.Theme.Quote" />
</resources>