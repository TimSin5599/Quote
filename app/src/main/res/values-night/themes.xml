<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Quote" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/wallpaper_dark</item>
<!--        <item name="actionBarStyle">@style/MyActionBar</item>-->
        <!-- Customize your dark theme here. -->
        <item name="android:itemBackground">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="customSearchIcon">@drawable/ic_search</item>
        <item name="customMenuIcon">@drawable/white_menu</item>
        <item name="iconQuotes">@drawable/ic_quote_white</item>
        <item name="iconAnecdotes">@drawable/ic_emoji_white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="NavigationLayoutStyle">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
        <item name="android:background">@color/deepGrey</item>
        <item name="itemIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="OverflowStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_three_points</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textColorHint">#A1A1A1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ButtonAddStyle">
        <item name="android:backgroundTint">#DE8BB14C</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDialogAlertTheme">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonAddStyle</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomDialogAlertAddQuote">
        <item name="android:windowBackground">@color/colorMenu</item>
        <item name="android:background">@drawable/dialog_dark</item>
        <item name="windowMinWidthMinor">85%</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources>